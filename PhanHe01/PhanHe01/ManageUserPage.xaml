<Page x:Class="PhanHe01.ManageUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhanHe01"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageUserPage"
      Loaded="Page_Loaded">

    <Grid Margin="10 0 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
                    Grid.Column="0">
            <Button x:Name="ListUserButton"
                    Click="ListUserButton_Click"
                    Content="Danh sách người dùng"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="CheckPrivilegeButton"
                    Click="CheckPrivilegeButton_Click"
                    Content="Kiểm tra quyền"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="AddUserButton"
                    Click="AddUserButton_Click"
                    Content="Thêm User"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="DeleteUserButton"
                    Click="DeleteUserButton_Click"
                    Content="Xóa User"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="UpdateUserButton" 
                    Click="UpdateUserButton_Click"
                    Content="Sửa User"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="AddRoleButton"
                    Click="AddRoleButton_Click"
                    Content="Thêm Role"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="UpdateRoleButton" 
                    Click="UpdateRoleButton_Click"
                    Content="Sửa Role"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
            <Button x:Name="DeleteRoleButton"
                    Click="DeleteRoleButton_Click"
                    Content="Xóa Role"
                    Margin="0 5"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>

        <Frame Grid.Column="1"
               x:Name="SubFrame"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
