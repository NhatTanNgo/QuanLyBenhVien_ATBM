<Page x:Class="HeThongBenhVien.MainDemo.RBAC_View"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeThongBenhVien.MainDemo"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1024"
      Title="RBAC_View">

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button x:Name="seller_btn" 
                    Height="100"
                    Width="300"
                    FontSize="30"
                    Margin="0 0 0 15"
                    Click="seller_btn_Click"
                    Content="Nhân viên bán thuốc"/>
            <Button x:Name="finManage_btn" 
                    Height="100"
                    Width="300"
                    FontSize="30"
                    Margin="0 0 0 15"
                    Click="finManage_btn_Click"
                    Content="Quản lý tài vụ"/>
        </StackPanel>
    </Grid>
</Page>
