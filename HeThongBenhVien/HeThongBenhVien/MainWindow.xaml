<Window x:Class="HeThongBenhVien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeThongBenhVien"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btn_left"
                Grid.Column="0" Grid.Row="0" 
                Content="Click vô ik"
                Click="btn_left_Click"/>
        <Button x:Name="btn_right" Grid.Column="1" Grid.Row="0" 
                Content="Click cái này ik"
                Click="btn_right_Click"
                Visibility="Hidden"/>
        <TextBlock x:Name="txt_username"
                   Grid.Column="1" Grid.Row="1" 
                   Text="THIS IS USERNAME: "/>
    </Grid>
</Window>
